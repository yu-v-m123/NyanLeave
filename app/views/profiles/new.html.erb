<% content_for(:page_title) {"プロフィール登録"} %>
<%= render "shared/error_messages", obj: @profile %>
<div class="profile-wrapper">
  <h2 class="profile-title">プロフィール登録</h2>
  <div class="profile-container">
    <%= form_with model: @profile, url: profiles_path, local: true do |f| %>
    <div class="profile-image">
      <h3 class="profile-image-title">猫ちゃんの写真</h3>
      <div class="profile-image-box">
        <div class="profile-image-box-item">
          <%= image_tag "default.jpg", class: "profile-image-box-item-icon", alt: "猫のアイコン" %>
        </div>
        <%= f.label :image, "画像をアップロード", class: "profile-image-box-btn" %>
        <%= f.file_field :image, class: "profile-image-box-form" %>
      </div>
    </div>
    <div class="profile-container-field">
      <div class="profile-field">
        <h3 class="profile-field-item">あなたのお名前</h3>
        <%= f.text_field :user_name, placeholder: "例) 田中太郎", class: "profile-field-area" %>
      </div>
      <div class="profile-field">
        <h3 class="profile-field-item">お住まい</h3>
        <%= f.select :address, {
  北海道: "北海道", 青森県: "青森県", 岩手県: "岩手県", 宮城県: "宮城県", 秋田県: "秋田県", 福島県: "福島県", 茨城県: "茨城県", 栃木県: "栃木県", 群馬県: "群馬県", 埼玉県: "埼玉県", 千葉県: "千葉県", 東京都: "東京都", 神奈川県: "神奈川県", 新潟県: "新潟県",富山県: "富山県", 石川県: "石川県", 福井県: "福井県", 山梨県: "山梨県", 長野県: "長野県", 岐阜県: "岐阜県", 静岡県: "静岡県", 愛知県: "愛知県", 三重県: "三重県", 滋賀県: "滋賀県", 京都府: "京都府", 大阪府: "大阪府", 兵庫県: "兵庫県", 奈良県: "奈良県", 和歌山県: "和歌山県", 鳥取県: "鳥取県", 島根県: "島根県", 岡山県: "岡山県", 広島県: "広島県", 山口県: "山口県", 徳島県: "徳島県", 香川県: "香川県", 愛媛県: "愛媛県", 高知県: "高知県", 福岡県: "福岡県", 佐賀県: "佐賀県", 長崎県: "長崎県", 熊本県: "熊本県", 大分県: "大分県", 宮崎県: "宮崎県", 鹿児島県: "鹿児島県", 沖縄県: "沖縄県"
  }, {include_blank: "選択してください"}, {class: "profile-field-address"} %>
      </div>
      <div class="profile-field">
        <h3 class="profile-field-item">猫ちゃんのお名前</h3>
        <%= f.text_field :cat_name, placeholder: "例) みけ", class: "profile-field-area" %>
      </div>
      <div class="profile-field">
        <h3 class="profile-field-item">猫ちゃんのご年齢</h3>
        <%= f.text_field :age, placeholder: "例) 2歳、5ヶ月", class: "profile-field-area" %>
      </div>
      <div class="profile-field">
        <h3 class="profile-field-item">自己紹介</h3>
        <%= f.text_area :introduction, placeholder: "あなたや猫ちゃんのことを教えて欲しいにゃ", class: "profile-field-introduction" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "登録する", class: "actions-new" %>
    </div>
    <% end %>
  </div>
</div>