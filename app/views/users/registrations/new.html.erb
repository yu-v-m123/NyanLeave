<% content_for(:page_title) {"会員登録"} %>
<%= render "users/shared/error_messages", resource: resource %>
<div class="signup">
  <h2 class="signup-title">会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="signup-fields">
    <div class="field-label">
      <%= f.label :email %>
    </div>
    <div class="field-area">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text-field" %>
    </div>

    <div class="field-label">
      <%= f.label :password %>
    </div>
    <div class="field-area">
      <%= f.password_field :password, autocomplete: "new-password", class:"text-field" %>
    </div>

    <div class="field-label">
      <%= f.label :password_confirmation %>
    </div>
    <div class="field-area">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"text-field" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する", class: "actions-signup" %>
    </div>
    <% end %>
  </div>
  <div class="transition">
    既にアカウントをお持ちの方 <span class="transition-link"><%= render "users/shared/links" %></span>
  </div>
  <% unless user_signed_in? %>
    <%= link_to "ゲストでログイン", guest_sign_in_path, method: :post, class: "guest-login-text" %>
  <% end %>
</div>