<% if user_signed_in? %>
  <% if current_user.already_liked?(p) %>
    <%= button_to "★ 気ににゃる済み", post_likes_path(p.id), method: :delete, remote: true, class: "like-already-btn" %>
  <% else %>
    <%= button_to '☆ 気ににゃる', post_likes_path(p.id), remote: true, class: "like-btn" %>
  <% end %>
<% end %>